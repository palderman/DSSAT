citHeader("When using the 'DSSAT' package for publications please cite all of the following:")

year <- sub("-.*","",meta$Date)
note <- sprintf("R package version %s.", meta$Version)

bibentry(bibtype = "Manual",
         title = "{DSSAT}: {A }Comprehensive {R }Interface for the {DSSAT Cropping Systems Model}",
